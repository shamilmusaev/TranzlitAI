{
  "manifest_version": 3,
  "name": "SmartTranslate LLM",
  "version": "1.0.0",
  "description": "Расширение для перевода текста с использованием LLM",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://openrouter.ai/*",
    "https://api.openai.com/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "icons/Tranzlit_icon.png", 
      "icons/drag-icon.svg",
      "icons/copy-icon-white.svg",
      "icons/close-icon-white.svg",
      "icons/paste-icon.svg",
      "icons/check-icon.svg",
      "icons/pin-icon.svg",
      "icons/pinned-icon.svg",
      "icons/expand-icon.svg",
      "icons/collapse-icon.svg"
    ],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/Tranzlit_icon.png",
      "32": "icons/Tranzlit_icon.png", 
      "48": "icons/Tranzlit_icon.png",
      "128": "icons/Tranzlit_icon.png"
    }
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/Tranzlit_icon.png",
    "48": "icons/Tranzlit_icon.png", 
    "128": "icons/Tranzlit_icon.png"
  }
} 